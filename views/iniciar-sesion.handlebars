<main class="contenedor">
    <form action="/iniciar-sesion" method="POST" class="default-form">
        <div class="campo">
            <label>Email</label>
            <input type="email" name="email" placeholder="Correo Electronico" required>
        </div>
        <div class="campo">
            <label>Contraseña</label>
            <input type="password" name="password" placeholder="Ingresa tu contraseña" required>
        </div>
        <div class="campo acciones">
            <a href="/crear-cuenta">Crea una cuenta en DevJobs</a>
            <a href="/reestablecer-password">Olvidastes tu contraseña?</a>
        </div>
        <div class="campo">
            <input type="submit" value="Iniciar sesion" class="btn btn-azul">
        </div>
    </form>
</main>