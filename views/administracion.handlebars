<main class="lista-vacantes">
    <h2>Navegacion</h2>
    <div class="botones separador">
        <a href="/editar-perfil" class="btn btn-azul">Editar perfil</a>
        <a href="/vacantes/nueva" class="btn btn-verde">Nueva vacante</a>
    </div>

    <h2>Tus publicaciones</h2>

    <div class="panel-administracion">
        {{#if vacantes.length}}
        {{#each vacantes}}
        <div class="vacante">
            <div class="caja">
                <h3>{{empresa}}</h3>
                <p class="puesto">{{titulo}}</p>
                <p class="candidatos">
                    {{candidatos.length}} Postulacion(es)
                </p>
            </div>
            <div class="centrar-vertical caja">
                <a href="/candidatos/{{id}}" class="btn btn-amarillo">Ver postulantes</a>
            </div>
            <div class="centrar-vertical caja">
                <a href="/vacante/editar/{{url}}" class="btn btn-verde">Editar</a>
            </div>
            <div class="centrar-vertical caja">
                <a href="#" data-eliminar="{{id}}" class="btn btn-rojo">Eliminar</a>
            </div>
        </div>
        {{/each}}
        {{else}}
        <p>No hay publicaciones</p>
        {{/if}}
    </div>
</main>